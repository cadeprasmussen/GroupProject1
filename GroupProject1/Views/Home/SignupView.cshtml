@model TimeslotList

@section scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "pageLength": 13,
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": false,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
}

<!--Including some additional libraries for paginated table-->
<link href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet">

<!--One week worth of time slots hardcoded-->
<div class="container">
    <table class="table table-hover" id="dataTable">
        <thead>

            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Available Slot</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var time in Model.Times)
            {
                <tr>
                    <td>@time.Date.ToString("d")</td>
                    <td>@time.Date.ToString("t")</td>
                    <td>@time.Date.ToString("t")</td>
                    <td>
                        <form asp-action="SignupView" method="post">
                            <input id="date" name="date" type="text" value="@time.Date.ToString("yyyy-MM-ddThh:mm")" hidden />
                            <button type="submit" class="btn btn-primary">Sign Up</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

