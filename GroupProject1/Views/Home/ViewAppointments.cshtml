@{
    ViewBag.Title = "View All Current Appointments";
}

@model IEnumerable<GroupProject1.Models.Group>

<div>
    <p>Group Information:</p>

    <table class="tab-content table">
        <tr>
            <th>Group Name</th>
            <th>Group Size</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Date</th>
        </tr>

@foreach (GroupProject1.Models.Group x in Model)
        {
            <tr>
                <td>@x.GroupName</td>
                <td>@x.GroupSize</td>
                <td>@x.Email</td>
                <td>@x.PhoneNumber</td>
                <td>@x.Date</td>
            </tr>
        }
    </table>
</div>
