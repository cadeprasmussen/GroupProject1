@{
    string date = ViewData["Date"].ToString();
    DateTime newDate = DateTime.Parse(date);
    date = newDate.ToString("yyyy-MM-ddThh:mm");
    ViewData["Booked"] = true;
}

@model GroupProject1.Models.Group

<div class="card">
    <div class="card-header">
        <h5>Timeslot: @ViewData["Date"].ToString()</h5>
    </div>
    <form asp-action="SignupForm" method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input asp-for="Date" class="form-control" value="@date" readonly="readonly" style="color: grey;" />
            </div>

            <div class="form-group">
                <label asp-for="GroupName">Group Name</label>
                <input asp-for="GroupName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="GroupSize">Group Size</label>
                <input asp-for="GroupSize" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            <div asp-validation-summary="All"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
    </form>
</div>
